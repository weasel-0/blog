---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

// const posts = (await getCollection("blog")).sort(
//   (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
// );
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="max-w-prose m-auto px-4 dark:bg-dark-bg">
    <Header />
    <main>
      <section class="dark:text-dark-text">
        <ul class="flex flex-col">
          {
            posts.map((post) => (
              <li class="flex leading-normal justify-between">
                {/* <FormattedDate date={post.data.pubDate} /> */}

                <a
                  href={`/blog/${post.slug}/`}
                  class="text-base font-normal underline"
                >
                  {post.data.title}
                </a>
                <FormattedDate date={post.data.pubDate} />

                {/* <time datetime={post.data.pubDate.toISOString()}>
                  {`${post.data.pubDate.getDate().toString().padStart(2)} ${post.data.pubDate.toLocaleString("en-us", { month: "short" })}, ${post.data.pubDate.getFullYear()}`}
                </time> */}

                {/* <a href={`/${post.slug}/`}>
                  <h1 class="text-xl font-bold hover:underline">
                    {post.data.title}
                  </h1>
                </a>
                <p class="mb-2 text-gray-600">{post.data.description}</p>
                <p class="date">
                  <FormattedDate date={post.data.pubDate} />
                </p>
                <a
                  href={`/${post.slug}/`}
                  class="text-blue-600 hover:text-blue-500 font-medium"
                >
                  {" "}
                  Read article
                </a> */}
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
