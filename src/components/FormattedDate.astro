---
interface Props {
    date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} class="text-gray-400 tabular-nums shrink-0">
    {
        date.toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
            // day: "2-digit",
        })
    }
</time>
